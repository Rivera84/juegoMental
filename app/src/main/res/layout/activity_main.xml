<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tituloAPP"
        android:layout_width="366dp"
        android:layout_height="143dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/bungee_shade"
        android:foregroundTint="#00FFFFFF"
        android:text="@string/TxtnombreTitulo"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@android:color/background_dark"
        android:textSize="40sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageMente"
        android:layout_width="209dp"
        android:layout_height="166dp"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/nombreImagen"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloAPP"
        app:srcCompat="@drawable/mente_sin_fondo"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btnIniciarPartida"
        android:layout_width="179dp"
        android:layout_height="68dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#387779"
        android:foregroundTint="#00FFFFFF"
        android:text="@string/btnIniciarPartida"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageMente" />

    <Button
        android:id="@+id/btnComoJugar"
        android:layout_width="179dp"
        android:layout_height="68dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#387779"
        android:text="@string/btnComoJugar"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnIniciarPartida" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="179dp"
        android:layout_height="68dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#387779"
        android:text="@string/btnSalir"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnComoJugar" />

</androidx.constraintlayout.widget.ConstraintLayout>